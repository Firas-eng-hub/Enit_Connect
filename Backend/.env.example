# ============================================
# Server Configuration
# ============================================
PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# Security Configuration
# ============================================
# JWT Secret - MUST be strong random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Frontend URL for CORS (production URL)
FRONTEND_URL=http://localhost:4200

# ============================================
# MongoDB Configuration
# ============================================
DB_USER=your-mongodb-user
DB_PASS=your-mongodb-password
DB_HOST=your-cluster.mongodb.net
DB_DOMAIN=your-cluster.mongodb.net
DB_NAME=TIC-ENIT

# ============================================
# Gmail SMTP Configuration (for email verification)
# ============================================
# 1. Use your Gmail address
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Never commit real credentials to git!
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Geocoder API (optional - for map features)
GEOCODER_API_KEY=your-here-maps-api-key
