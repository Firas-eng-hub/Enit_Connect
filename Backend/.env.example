# ============================================
# Server Configuration
# ============================================
PORT=3000
BASE_URL=http://localhost:3000
APP_URL=http://localhost:3000
# Optional: serve files from CDN/static host (fallbacks to BASE_URL)
FILE_BASE_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# Security Configuration
# ============================================
# JWT Secret - MUST be strong random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Frontend URL for CORS (production URL)
FRONTEND_URL=http://localhost:4200

# Cookie settings
# COOKIE_SECURE=true for HTTPS, false for HTTP
COOKIE_SECURE=false
# COOKIE_SAMESITE: lax | strict | none (use "none" for cross-site frontends)
COOKIE_SAMESITE=lax
# COOKIE_DOMAIN=.yourdomain.com (optional)
COOKIE_DOMAIN=

# ============================================
# PostgreSQL Configuration
# ============================================
DATABASE_URL=postgresql://enit_user:password@localhost:5432/enit_connect

# ============================================
# Gmail SMTP Configuration (for email verification)
# ============================================
# 1. Use your Gmail address
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Never commit real credentials to git!
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
MAIL_NOTIFICATIONS_ENABLED=true
MAIL_IMMEDIATE_ADMIN_NOTICE=true

# Geocoder API (optional - for map features)
GEOCODER_API_KEY=your-here-maps-api-key

# Document security (optional)
# Point to an AV scanning service that accepts JSON: { documentId, path, mimeType, sizeBytes }
DOC_AV_SCAN_URL=
